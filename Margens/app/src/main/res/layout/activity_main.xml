            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:background="#012E7D"
            android:text="Natalie"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/jennie1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="#012E7D"
            android:text="Jennie"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/omoju1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/jennie1_text_view"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="#012E7D"
            android:text="Omoju"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/amy1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/omoju1_text_view"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="#012E7D"
            android:text="Amy"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/kunal1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/ben1_text_view"
            android:background="#012E7D"
            android:text="Kunal"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/kagure1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/ben1_text_view"
            android:background="#012E7D"
            android:text="Kagure"
            android:textColor="#fff"
            android:textSize="24sp" />

    </RelativeLayout>
</LinearLayout>